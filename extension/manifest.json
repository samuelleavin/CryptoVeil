{
  "manifest_version": 2,
 
  "name": "CryptoVeil",
  "description": "Super awesome data crypto",
  "version": "0.1.0",
 
  "browser_action": {
   "default_icon": {
      "19": "iconGreen.png"
    },
   "default_popup": "popup.html",
   "default_title": "CryptoVeil"
  },

  "background": {
    "page": "background.html",
    "persistent": true
    },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["/js/dependencies/jquery-2.1.4.min.js", "/js/content.js"]
  }],
    
  "permissions": [
    "activeTab",
    "background",
    "webRequest",
    "webRequestBlocking",
    "*://*.google.com/"
   ]
}
