{
  "manifest_version": 2,
 
  "name": "CryptoVeil",
  "description": "Super awesome data crypto",
  "version": "0.1.0",
 
  "browser_action": {
   "default_icon": {
      "19": "icon.png"
    },
   "default_popup": "popup.html",
   "default_title": "CryptoVeil"
  },

  "background": {
    "page": "background.html"
    },
  // "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["http://mail.google.com/*", "https://mail.google.com/*"],
      "js": ["js/content.js", "js/dependencies/jquery-2.1.4.js"]
    }
  ],
    
  "permissions": [
   "activeTab",
   "background",
    "webRequest",
    "webRequestBlocking",
    "*://*.google.com/"
   ]
}
