{
  "manifest_version": 2,
 
  "name": "CryptoVeil",
  "externally_connectable": {
    "ids": ["*"],
    "matches": ["*://mail.google.com/*", "*://127.0.0.1/*"]
    },
  "description": "Super awesome data crypto",
  "version": "0.1.0",
 
  "browser_action": {
   "default_icon": {
      "19": "red128.png"
    },
   "default_popup": "popup.html",
   "default_title": "CryptoVeil"
  },

  "background": {
    "page": "background.html"
    },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*", "http://mail.google.com/*"],
      "js": ["/js/jquery-1.10.2.min.js", "/js/content.js"]
    }
  ],

  "web_accessible_resources": [
    "/js/jquery-1.10.2.min.js",
    "/js/gmail.js",
    "/js/externalMain.js",
    "/js/dependencies/aes.js"
  ],
  
  // "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  // "content_security_policy": "script-src 'self' http://127.0.0.1; object-src 'self'",

  "permissions": [
   "activeTab",
   "background",
    "webRequest",
    "webRequestBlocking",
    "*://*.google.com/",
    "*://127.0.0.1/*"
   ]
}

