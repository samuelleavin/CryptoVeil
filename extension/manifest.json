{
  "manifest_version": 2,
 
  "name": "CryptoVeil",
  "description": "Super awesome data crypto",
  "version": "0.1.0",
 
  "browser_action": {
   "default_icon": {
      "19": "icon.png"
    },
   "default_popup": "popup.html",
   "default_title": "CryptoVeil"
  },

  "background": {
    "page": "background.html"
    },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["/js/content.js"]
    }
  ],

  "web_accessible_resources": [
    "/js/jquery-1.10.2.min.js",
    "/js/gmail.js",
    "/js/main2.js"
  ],

  "permissions": [
   "activeTab",
   "background",
    "webRequest",
    "webRequestBlocking",
    "*://*.google.com/"
   ]
}
